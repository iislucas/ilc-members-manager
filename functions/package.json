{
  "name": "google-cal-events-viewer-functions",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "protobufjs"
    ]
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "deploy": "pnpm build && firebase deploy --only functions",
    "emulate": "pnpm build && concurrently \"pnpm build:watch\" \"firebase emulators:start\"",
    "logs": "firebase functions:log",
    "admin": "ts-node scripts/admin.ts",
    "dedupe-members": "ts-node scripts/dedupe-members.ts",
    "test": "jasmine --require=ts-node/register 'src/**/*.spec.ts'"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^5.0.0",
    "axios": "^1.9.0",
    "concurrently": "^9.1.2",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@google-cloud/secret-manager": "^6.0.1",
    "@types/jasmine": "^6.0.0",
    "@types/yargs": "^17.0.33",
    "jasmine": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "yargs": "^17.7.2"
  },
  "eslintIgnore": [
    "node_modules/"
  ]
}
