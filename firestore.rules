rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    function isAdmin() {
      let email = request.auth.token.email;
      let aclPath = /databases/$(database)/documents/acl/$(email);
      return email != null && exists(aclPath) && get(aclPath).data.isAdmin == true;
    }
    function getUserMemberDocIds() {
      let email = request.auth.token.email;
      let aclPath = /databases/$(database)/documents/acl/$(email);
      return (email != null && exists(aclPath)) ? get(aclPath).data.memberDocIds : [];
    }

    match /members/{memberId} {
      function isOwner() {
        return (request.auth.token.email in resource.data.emails) || 
               (memberId in getUserMemberDocIds());
      }
      function isManagerOfMemberSchool() {
        let member = resource.data;
        let schoolId = member.managingOrgId;
        let schoolPath = /databases/$(database)/documents/schools/$(schoolId);
        let school = get(schoolPath).data;
        return schoolId != "" && exists(schoolPath) && (
          request.auth.token.email == school.ownerEmail || 
          request.auth.token.email in school.managerEmails
        );
      }
      function isValidEdit() {
        return request.resource.data.lastUpdated == request.time;
      }
      allow read: if isOwner() || isAdmin() || isManagerOfMemberSchool();
      allow delete: if isAdmin(); 
      allow write: if isValidEdit() && (isAdmin() || isManagerOfMemberSchool());
      allow update: if isValidEdit() && isOwner() && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(
          ['lastUpdated', 'name', 'instructorWebsite', 'publicRegionOrCity', 
           'publicEmail', 'publicPhone', 'address', 'zipCode', 'country', 'phone', 
           'emails', 'gender', 'dateOfBirth', 'sifuInstructorId']);
    }

    match /schools/{schoolId} {
      function isSchoolManager() {
        let school = get(/databases/$(database)/documents/schools/$(schoolId)).data;
        return request.auth.token.email == school.ownerEmail || 
            request.auth.token.email in school.managerEmails;
      }
      function isValidEdit() {
        return request.resource.data.lastUpdated == request.time;
      }
      allow read: if true;
      allow write: if isValidEdit() && isAdmin();
      allow delete: if isAdmin();
      allow update: if isValidEdit() && isSchoolManager() && 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(
            ['lastUpdated', 'schoolAddress', 'schoolZipCode', 'schoolWebsite', 'managers']);
    }

    match /instructors/{instructorMemberDocId} {
      allow read: if true;
      
      match /members/{studentMemberDocId} {
        allow read: if instructorMemberDocId in getUserMemberDocIds();
      }
    }

    match /schools/{schoolId}/members/{memberId} {
      function isSchoolManager() {
        let school = get(/databases/$(database)/documents/schools/$(schoolId)).data;
        return request.auth.token.email == school.ownerEmail || 
            request.auth.token.email in school.managerEmails;
      }
      allow read: if isAdmin() || isSchoolManager();
    }

    match /acl/{email} {
      allow read: if request.auth.token.email == email || isAdmin();
      allow write: if isAdmin();
    }

    match /static/country-codes {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /counters/singleton {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}