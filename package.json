{
  "name": "ilc-members-manager",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project ilc-members-manager",
    "start:wc": "ng serve --project find-an-instructor-wc",
    "build": "ng build --project ilc-members-manager",
    "build:wc": "ng build --project find-an-instructor-wc",
    "build:functions": "pnpm --prefix functions run build",
    "build:all": "pnpm build && pnpm build:functions",
    "watch": "ng build --watch --configuration development --project ilc-members-manager",
    "test:watch": "ng test --project ilc-members-manager",
    "test:once": "ng test --no-watch --browsers=ChromeHeadless --project ilc-members-manager",
    "test": "pnpm test:once",
    "deploy": "pnpm build:all && firebase deploy",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "deploy:functions": "pnpm build:functions && firebase deploy --only functions",
    "deploy:hosting": "pnpm build && firebase deploy --only hosting"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "protobufjs"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.1",
    "@angular/compiler": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/elements": "^20.2.1",
    "@angular/forms": "^20.2.1",
    "@angular/platform-browser": "^20.2.1",
    "@angular/platform-browser-dynamic": "^20.2.1",
    "@angular/router": "^20.2.1",
    "@types/papaparse": "^5.3.16",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^12.1.0",
    "minisearch": "^7.1.2",
    "papaparse": "^5.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.1",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
