{
  "name": "ilc-members-manager",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project ilc-members-manager",
    "start:wc": "ng serve --project find-an-instructor-wc",
    "build": "ng build --project ilc-members-manager",
    "build:wc": "ng build --project find-an-instructor-wc",
    "build:functions": "pnpm --prefix functions run build",
    "build:all": "pnpm run build && pnpm run build:functions",
    "watch": "ng build --watch --configuration development --project ilc-members-manager",
    "test:watch": "vitest --no-color",
    "test:once": "vitest run --no-color",
    "test": "pnpm test:once",
    "test:functions": "pnpm --prefix functions test",
    "test:rules:in_emulator": "mocha -r ts-node/register tests/firestore.rules.spec.ts",
    "test:rules": "pnpm exec firebase emulators:exec --only firestore \"pnpm test:in_emulator\"",
    "deploy": "pnpm run build:all && firebase deploy",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "deploy:functions": "pnpm run build:functions && firebase deploy --only functions",
    "deploy:hosting": "pnpm run build && firebase deploy --only hosting",
    "mcp": "ng mcp"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "protobufjs"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/elements": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@types/papaparse": "^5.3.16",
    "date-fns": "^4.1.0",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^12.1.0",
    "firebase-tools": "^15.4.0",
    "minisearch": "^7.1.2",
    "papaparse": "^5.5.3",
    "rxjs": "~7.8.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/platform": "^2.2.3",
    "@analogjs/vite-plugin-angular": "^2.2.3",
    "@analogjs/vitest-angular": "^2.2.3",
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "jsdom": "^28.1.0",
    "mocha": "^11.7.5",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
